<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/background">

        <View
           android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#06fce3"
            android:id="@+id/topline"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="4dp"
           android:background="#06fce3"
           android:id="@+id/bottomline"
           android:layout_alignParentBottom="true"/>

       <View
           android:layout_width="4dp"
           android:layout_height="match_parent"
           android:background="#06fce3"
           android:id="@+id/leftline"
           android:layout_alignParentLeft="true"/>


       <View
           android:layout_width="4dp"
           android:layout_height="match_parent"
           android:background="#06fce3"
           android:id="@+id/rightline"
           android:layout_alignParentRight="true"/>


       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/gits_logo"
           android:layout_below="@+id/topline"
           android:layout_margin="20dp"
           android:src="@drawable/gits_logo"
           android:layout_centerInParent="true"/>

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/email"
           android:inputType="textEmailAddress"
           android:layout_below="@+id/gits_logo"
           android:layout_toLeftOf="@+id/rightline"
           android:layout_toRightOf="@+id/leftline"
           android:hint="Enter Email"
           android:textColor="@color/icons"
           android:textColorHint="@color/icons"
           android:layout_margin="20dp"
           android:layout_centerInParent="true"
           />

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/pass"
           android:inputType="textPassword"
           android:layout_below="@+id/email"
           android:layout_toLeftOf="@+id/rightline"
           android:layout_toRightOf="@+id/leftline"
           android:hint="Enter Password"
           android:textColor="@color/icons"
           android:textColorHint="@color/icons"
           android:layout_margin="20dp"
           android:layout_centerInParent="true"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_below="@+id/pass"
           android:id="@+id/login"
           android:text="Login"
           android:background="@drawable/rectangle"
           android:layout_margin="10dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_below="@+id/login"
           android:text="Forgot Password"
           android:textColor="@color/abc_primary_text_disable_only_material_light"
           />

</RelativeLayout>
