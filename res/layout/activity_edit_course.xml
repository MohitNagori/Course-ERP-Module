<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_light"
                android:id="@+id/topline"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_light"
                android:id="@+id/bottomline"
                android:layout_alignParentBottom="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/primary_light"
                android:id="@+id/leftline"
                android:layout_alignParentLeft="true"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/primary_light"
                android:id="@+id/rightline"
                android:layout_alignParentRight="true"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gits_logo"
                android:layout_below="@+id/topline"
                android:layout_above="@+id/pass"
                android:layout_margin="20dp"
                android:src="@drawable/gits_logo"
                android:layout_centerInParent="true"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rightline"
                android:layout_toRightOf="@+id/leftline"
                android:hint="Enter Course"
                android:layout_margin="20dp"
                android:src="@drawable/gits_logo"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/pass"
                android:layout_toLeftOf="@+id/rightline"
                android:layout_toRightOf="@+id/leftline">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/Clear"
                    android:text="Cancel"
                    android:background="@drawable/rectangle"
                    android:layout_margin="10dp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/save"
                    android:text="Update"
                    android:background="@drawable/rectangle"
                    android:layout_margin="10dp"/>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>


