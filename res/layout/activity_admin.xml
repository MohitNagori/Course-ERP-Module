<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#06fce3"
        android:id="@+id/topline"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#06fce3"
        android:id="@+id/bottomline"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#06fce3"
        android:id="@+id/leftline"
        android:layout_alignParentLeft="true"/>


    <View
        android:layout_width="4dp"
        android:background="#06fce3"
        android:layout_height="match_parent"
        android:id="@+id/rightline"
        android:layout_alignParentRight="true"/>


    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#06fce3"
        android:id="@+id/centervline"
        android:layout_centerInParent="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#06fce3"
        android:id="@+id/centerhline"
        android:layout_centerInParent="true"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_margin="20dp"
        android:id="@+id/course"
        android:layout_toLeftOf="@+id/centervline"
        android:layout_toRightOf="@+id/leftline"
        android:layout_below="@+id/topline"
        android:layout_above="@+id/centerhline"
        android:background="@drawable/rectangle">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/course"
            android:layout_weight="2.5"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Course"
            android:layout_weight="1.5"
            android:textSize="21sp"
            android:textColor="@color/accent"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_margin="20dp"
        android:id="@+id/branch"
        android:layout_toLeftOf="@+id/rightline"
        android:layout_toRightOf="@+id/centervline"
        android:layout_below="@+id/topline"
        android:layout_above="@+id/centerhline"
        android:background="@drawable/rectangle">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/branch"
            android:layout_weight="2.5"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Branch"
            android:layout_weight="1.5"
            android:textSize="21sp"
            android:textColor="@color/accent"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_margin="20dp"
        android:id="@+id/subject"
        android:layout_toLeftOf="@+id/centervline"
        android:layout_toRightOf="@+id/leftline"
        android:layout_below="@+id/centerhline"
        android:layout_above="@+id/bottomline"
        android:background="@drawable/rectangle">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/subject"
            android:layout_weight="2.5"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Subject"
            android:layout_weight="1.5"
            android:textSize="21sp"
            android:textColor="@color/accent"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_margin="20dp"
        android:id="@+id/clas"
        android:layout_toLeftOf="@+id/rightline"
        android:layout_toRightOf="@+id/centervline"
        android:layout_below="@+id/centerhline"
        android:layout_above="@+id/bottomline"
        android:background="@drawable/rectangle">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/classpic"
            android:layout_weight="2.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Class"
            android:layout_weight="1.5"
            android:textSize="21sp"
            android:textColor="@color/accent"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
