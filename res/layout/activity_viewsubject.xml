<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.mohit.college.activity.Course.ViewCourse"
    android:weightSum="13"
    android:background="@drawable/background">

<Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coursespinner"></Spinner>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjectspinner"
        android:layout_below="@+id/coursespinner" ></Spinner>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subjectspinner"
        android:id="@+id/semesterspinner"></Spinner>

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Search"
                android:id="@+id/search"
                android:iconifiedByDefault="false"
                android:layout_below="@+id/semesterspinner"
                android:background="@color/icons"
                />




    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/courselist"
        android:layout_below="@+id/search"></ListView>

    </RelativeLayout>