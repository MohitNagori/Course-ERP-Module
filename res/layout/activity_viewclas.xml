<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mohit.college.activity.Course.ViewCourse"
    android:weightSum="13"
    android:background="@drawable/background">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coursespinner"></Spinner>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjectspinner"
        android:layout_below="@+id/coursespinner"></Spinner>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SubjectSubject"
                android:layout_below="@+id/subjectspinner"></Spinner>


            <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:layout_below="@+id/SubjectSubject"
             android:id="@+id/Subjectsemester"></Spinner>


            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/icons"
                android:queryHint="Search"
                android:id="@+id/search"
                android:layout_below="@+id/Subjectsemester"
             />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@+id/search"
        android:id="@+id/courselist"></ListView>
</RelativeLayout>